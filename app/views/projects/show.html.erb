<%= render @project %>

<div>
  <%= link_to "Edit", edit_project_path(@project) %> |
  <%= link_to "Back", projects_path %> |
  <%= link_to "Destroy", @project, data: { turbo_method: :delete } %>
</div>
<hr/>

